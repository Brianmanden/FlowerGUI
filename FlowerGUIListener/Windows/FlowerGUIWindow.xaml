<Window x:Class="FlowerGUIListener.Windows.FlowerGUIWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FlowerGUI" 
        Height="400" Width="400"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        WindowStartupLocation="Manual">

	<Window.Resources>
		<Style x:Key="PetalButtonStyle" TargetType="Button">
			<Setter Property="Background" Value="#FF4CAF50"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="Width" Value="100"/>
			<Setter Property="Height" Value="120"/>
			<Setter Property="Cursor" Value="Hand"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Grid>
							<Path x:Name="PetalPath"
                                  Data="M 50 0 C -24 0 45 115 50 120 C 55 115 126 0 50 0 Z"
                                  Fill="{TemplateBinding Background}"
                                  Stretch="Fill" Margin="0,-57,0,0"/>
							<ContentPresenter
								Height="30" Width="150" HorizontalAlignment="Center" VerticalAlignment="Center">
								<ContentPresenter.RenderTransform>
									<RotateTransform Angle="-90"/>
								</ContentPresenter.RenderTransform>
							</ContentPresenter>
						</Grid>
						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter TargetName="PetalPath" Property="Fill" Value="#FF66BB6A"/>
							</Trigger>
							<Trigger Property="IsPressed" Value="True">
								<Setter TargetName="PetalPath" Property="Fill" Value="#FF388E3C"/>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
	</Window.Resources>

	<Grid>


		<!-- Petal container -->
		<Grid HorizontalAlignment="Center" VerticalAlignment="Center">

			<Button Content="Note" FontSize="18" Style="{StaticResource PetalButtonStyle}" Click="TakeNote_Click">
				<Button.RenderTransform>
					<TransformGroup>
						<RotateTransform Angle="0" CenterX="50" CenterY="50"/>
						<TranslateTransform X="0" Y="-60"/>
					</TransformGroup>
				</Button.RenderTransform>
			</Button>

			<Button Content="Screenshot" FontSize="18" Style="{StaticResource PetalButtonStyle}" Click="TakeScreenshot_Click">
				<Button.RenderTransform>
					<TransformGroup>
						<RotateTransform Angle="51.428" CenterX="50" CenterY="50"/>
						<TranslateTransform X="45" Y="-34"/>
					</TransformGroup>
				</Button.RenderTransform>
			</Button>

			<Button Content="Clipboard" FontSize="18" Style="{StaticResource PetalButtonStyle}" Click="OpenClipboard_Click">
				<Button.RenderTransform>
					<TransformGroup>
						<RotateTransform Angle="102.856" CenterX="50" CenterY="50"/>
						<TranslateTransform X="58" Y="6"/>
					</TransformGroup>
				</Button.RenderTransform>
			</Button>

			<Button Content="Search" FontSize="18" Style="{StaticResource PetalButtonStyle}" Click="Search_Click">
				<Button.RenderTransform>
					<TransformGroup>
						<RotateTransform Angle="154.284" CenterX="50" CenterY="50"/>
						<TranslateTransform X="21" Y="53"/>
					</TransformGroup>
				</Button.RenderTransform>
			</Button>

			<Button Content="Recent items" FontSize="18" Style="{StaticResource PetalButtonStyle}" Click="RecentItems_Click">
				<Button.RenderTransform>
					<TransformGroup>
						<RotateTransform Angle="205.712" CenterX="50" CenterY="50"/>
						<TranslateTransform X="-21" Y="53"/>
					</TransformGroup>
				</Button.RenderTransform>
			</Button>

			<Button Content="Help" FontSize="18" Style="{StaticResource PetalButtonStyle}" Click="Help_Click">
				<Button.RenderTransform>
					<TransformGroup>
						<RotateTransform Angle="257.14" CenterX="50" CenterY="50"/>
						<TranslateTransform X="-58" Y="6"/>
					</TransformGroup>
				</Button.RenderTransform>
			</Button>

			<Button Content="Info" FontSize="18" Style="{StaticResource PetalButtonStyle}" Click="Info_Click">
				<Button.RenderTransform>
					<TransformGroup>
						<RotateTransform Angle="308.568" CenterX="50" CenterY="50"/>
						<TranslateTransform X="-45" Y="-34"/>
					</TransformGroup>
				</Button.RenderTransform>
			</Button>

			<Ellipse Fill="#FFC107" Width="80" Height="80" HorizontalAlignment="Center" VerticalAlignment="Center"/>
		</Grid>


	</Grid>
</Window>
