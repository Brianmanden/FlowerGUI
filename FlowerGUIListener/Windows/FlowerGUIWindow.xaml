<Window x:Class="FlowerGUIListener.Windows.FlowerGUIWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FlowerGUI" 
        Height="300" Width="300"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        WindowStartupLocation="Manual">
    
    <Window.Resources>
        <Style x:Key="PetalButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="100"/>
            <Setter Property="Height" Value="120"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Path x:Name="PetalPath"
                                  Data="M 50,0 C 0,10 40,115 50,120 C 60,115 100,10 50,0 Z"
                                  Fill="{TemplateBinding Background}"
                                  Stretch="Fill" Margin="0,-57,0,0"/>
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center">
                                <ContentPresenter.RenderTransform>
                                    <RotateTransform Angle="-90"/>
                                </ContentPresenter.RenderTransform>
                            </ContentPresenter>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="PetalPath" Property="Fill" Value="#FF66BB6A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="PetalPath" Property="Fill" Value="#FF388E3C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FFF44336"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FFEF5350"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FFD32F2F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Border Background="White" 
                CornerRadius="150" 
                BorderBrush="#FFCCCCCC" 
                BorderThickness="1"
                Margin="20">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="5" 
                                Direction="315" 
                                Color="Black" 
                                Opacity="0.3" 
                                BlurRadius="20"/>
            </Border.Effect>
        </Border>

        <!-- Petal container -->
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            
            <Button Content="Note" FontSize="18" Style="{StaticResource PetalButtonStyle}" Click="TakeNote_Click">
                <Button.RenderTransform>
                    <TransformGroup>
                        <RotateTransform Angle="-45" CenterX="50" CenterY="50"/>
                        <TranslateTransform X="-50" Y="-50"/>
                    </TransformGroup>
                </Button.RenderTransform>
            </Button>

            <Button Content="Screenshot" FontSize="18" Style="{StaticResource PetalButtonStyle}" Click="TakeScreenshot_Click">
                <Button.RenderTransform>
                    <TransformGroup>
                        <RotateTransform Angle="45" CenterX="50" CenterY="50"/>
                        <TranslateTransform X="50" Y="-50"/>
                    </TransformGroup>
                </Button.RenderTransform>
            </Button>

            <Button Content="Clipboard" FontSize="18" Style="{StaticResource PetalButtonStyle}" Click="OpenClipboard_Click">
                <Button.RenderTransform>
                    <TransformGroup>
                        <RotateTransform Angle="-135" CenterX="50" CenterY="50"/>
                        <TranslateTransform X="-50" Y="50"/>
                    </TransformGroup>
                </Button.RenderTransform>
            </Button>

            <Button Content="Search" FontSize="18" Style="{StaticResource PetalButtonStyle}" Click="Search_Click">
                <Button.RenderTransform>
                    <TransformGroup>
                        <RotateTransform Angle="135" CenterX="50" CenterY="50"/>
                        <TranslateTransform X="50" Y="50"/>
                    </TransformGroup>
                </Button.RenderTransform>
            </Button>

            <Ellipse Fill="#FFC107" Width="80" Height="80" HorizontalAlignment="Center" VerticalAlignment="Center" IsHitTestVisible="False"/>
        </Grid>
        
        <Button Style="{StaticResource CloseButtonStyle}"
                Content="?" 
                FontSize="14"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Margin="40"
                Click="CloseButton_Click"/>
    </Grid>
</Window>
